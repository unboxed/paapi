<header class="govuk-header" role="banner" data-module="govuk-header">
  <div class="govuk-header__container govuk-width-container">
    <div class="govuk-header__logo">
      <a href="/" class="govuk-header__link govuk-header__link--homepage">
        <span class="govuk-header__logotype">
          <span class="govuk-header__logotype-text"> PAAPI<small>.services</small> </span>
        </span>
      </a>
    </div>

    <div class="govuk-header__content">
      <a href="/" class="govuk-header__link govuk-header__service-name">
        Planning Register
      </a>

      <nav aria-label="Menu" class="govuk-header__navigation">
        <button
          type="button"
          class="govuk-header__menu-button govuk-js-header-toggle"
          aria-controls="navigation"
          aria-label="Show or hide menu"
          hidden=""
        >
          Menu
        </button>

        <ul id="navigation" class="govuk-header__navigation-list">
          <li class="govuk-header__navigation-item">
            <a class="govuk-header__link" href="/"> Home </a>
          </li>

          <li class="govuk-header__navigation-item">
            <a class="govuk-header__link" href="https://docs.paapi.services/api-docs"> API Docs </a>
          </li>

          <li class="govuk-header__navigation-item">
            <a class="govuk-header__link" href="https://docs.paapi.services/about"> About </a>
          </li>

          <li class="govuk-header__navigation-item">
            <% if user_signed_in? %>
              <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "govuk-header__link" %>
            <% else %>
              <%= link_to "Sign in", new_user_session_path, class: "govuk-header__link" %>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
