{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.2.4",
    "esbuild": "^0.16.6",
    "govuk-frontend": "^4.4.1",
    "sass": "^1.56.2"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps",
    "serve:pages": "cp -f public/api-docs/v1/_build/swagger_doc.yaml docs/ && cd docs && jekyll s"
  }
}
